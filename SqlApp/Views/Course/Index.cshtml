@model IEnumerable<SqlApp.Models.Course>

@{
    ViewData["title"] = "HomePage";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
</head>

<div>
    <h1 style="text-align:center">ARAM ENGINEERING SERVICES</h1>
    <h3>
        The course details are listed below
    </h3>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Rating</th>
            </tr></thead>
        <tbody>
            @foreach(var course in Model)
            {
                <tr>
                    <th scope="row">@course.CourseID</th>
                    <td>@course.CourseName</td>
                    <td>@course.Rating</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        The instructors are:
        <ol>
            <li>
                Siva
            </li>
            <li>Deepa</li>
            <li>Swaminathan</li>
        </ol>
    </div>
</div>